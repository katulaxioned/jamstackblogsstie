---
layout: base.njk
pagination:
  data: blogs
  size: 10
  alias: blogs
permalink: "/{% if pagination.pageNumber>0 %}{{ pagination.pageNumber + 1 }}{% endif %}/index.html" 
---

<div class="container">
  <header>
    <div class="wrapper">
      <h1><a href="/" title="Jamstack blog site">jamstack blog site</a></h1>
    </div>
  </header>
  <section class="blogs">
    <div class="wrapper">
      {% for blog in blogs %}
        <article>
          <h2><a href="#FIXME" title="Read more">{{ blog.title }}</a></h2>
          <span class="authorname">atul blogging tips<time>may 20, 2021</time></span>
          <p>{{ blog.body }}</p>
          <a href="#FIXME" class="read">Read more</a>
        </article>
      {% endfor %}
      <ul class="pagination">
        {% set regExp = r/^\/$/g %}
        {% for link in pagination.hrefs %}
          <li><a href="{{ link }}">{{"1" if regExp.test(link) else link | replace("/", "") }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </section>
</div>

